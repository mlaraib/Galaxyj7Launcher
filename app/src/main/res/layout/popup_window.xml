<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



    <View
        android:background="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.0" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="50.0"
        android:layout_weight="35.0" />

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:weightSum="30.0"
                  android:layout_weight="25.0">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="30.0"
            android:layout_weight="1.2">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="9dp"
                android:weightSum="30.0"
                android:layout_weight="1.2">

                <RelativeLayout
                    android:background="@drawable/dialog_title_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="24.6">

                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@mipmap/header_dailog"
                               android:scaleType="fitXY" />

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/app_base_theme"
                        android:gravity="center"
                        android:id="@+id/textViewTitle"
                        android:paddingLeft="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KYA SCENE BOSS ?"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/dialog_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5.4">

                    <GridView android:id="@+id/vgv"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:horizontalSpacing="10dp"
                              android:numColumns="3" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/imageViewCross"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/close_two"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="5.0"
        android:layout_weight="40.0" /> />





</RelativeLayout>
